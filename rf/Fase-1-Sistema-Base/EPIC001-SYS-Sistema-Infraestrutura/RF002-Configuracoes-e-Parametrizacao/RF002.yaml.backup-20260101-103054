    - sistema: "Slack/Microsoft Teams"
      tipo: "Webhook"
      obrigatoria: false
      descricao: "Notificações de mudanças críticas"
    - sistema: "Redis Cloud"
      tipo: "Cache Distribuído"
      obrigatoria: true
      descricao: "Cache hot-reload com pub/sub"

